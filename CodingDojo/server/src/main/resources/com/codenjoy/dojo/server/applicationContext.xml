<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.codenjoy.dojo.services"/>
    <context:component-scan base-package="com.codenjoy.dojo.transport"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/com/codenjoy/dojo/server/codenjoy.properties"/>
    </bean>

    <import resource="applicationContext-database.xml"/>

    <bean id="timerService" class="com.codenjoy.dojo.services.TimerService" init-method="init">
        <property name="period" value="1000"/>
    </bean>

    <bean name="screenControllerServlet" class="com.codenjoy.dojo.transport.screen.ScreenController"/>

    <bean name="playerControllerFactory" class="com.codenjoy.dojo.services.PlayerControllerFactoryImpl"/>

    <bean name="wsPlayerController" class="com.codenjoy.dojo.services.WsPlayerController" >
        <property name="transport" ref="wsPlayerTransport"/>
    </bean>

    <bean name="restSenderExecutorService" class="java.util.concurrent.ScheduledThreadPoolExecutor">
        <constructor-arg index="0" value="100" type="int"/>
    </bean>

    <bean id="authenticationService" class="com.codenjoy.dojo.transport.ws.DefaultAuthenticationService"/>

</beans>